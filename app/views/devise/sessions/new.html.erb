<h2>Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row add-top-space">
    <h4><%= f.label :email, class: 'col-sm-2' %></h4>
    <%= f.email_field :email, autofocus: true, class: 'col-sm-3' %>
  </div>

  <div class="form-group row">
    <h4><%= f.label :password, class: 'col-sm-2'%></h4>
    <%= f.password_field :password, autocomplete: "off", class: 'col-sm-3' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-info' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
